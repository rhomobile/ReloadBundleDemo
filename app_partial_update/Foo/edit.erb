<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @foo.bar1 %></h1>
    <a href="<%= url_for :action => :show, :id => @foo.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @foo.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @foo.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="foo[bar1]" class="fieldLabel">Bar1</label>
            <input type="text" id="foo[bar1]" name="foo[bar1]" value="<%= @foo.bar1 %>" <%= placeholder( "Bar1" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="foo[bar2]" class="fieldLabel">Bar2</label>
            <input type="text" id="foo[bar2]" name="foo[bar2]" value="<%= @foo.bar2 %>" <%= placeholder( "Bar2" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
