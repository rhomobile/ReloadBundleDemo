<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Foo</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @foo.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Bar1: </td>
                <td class="itemValue"><input type="text" name="foo[bar1]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Bar2: </td>
                <td class="itemValue"><input type="text" name="foo[bar2]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
