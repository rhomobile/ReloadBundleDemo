<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @foo.object %>
    <h1>Edit <%= @foo.bar1%></h1>
    <%= link_to "Delete", :action => :delete, :id => @foo.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @foo.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Bar1: </td>
              <td class="itemValue"><input type="text" name="foo[bar1]" value="<%= @foo.bar1 %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Bar2: </td>
              <td class="itemValue"><input type="text" name="foo[bar2]" value="<%= @foo.bar2 %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
